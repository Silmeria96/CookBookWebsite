@model IEnumerable<CookBookWebsite.Models.CookBookMaterial>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("新建", "Create",new { }, new { @class="btn btn-default" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CookBook.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Level)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CookBook.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Level)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td class="operation-td">
            @Html.ActionLink("编辑", "Edit", new { id = item.ID }, new { @class = "btn btn-default" })
            @Html.ActionLink("查看详情", "Details", new { id = item.ID }, new { @class = "btn btn-default" })
            @Html.ActionLink("删除", "Delete", new { id = item.ID }, new { @class = "btn btn-default" })
        </td>
    </tr>
}

</table>
