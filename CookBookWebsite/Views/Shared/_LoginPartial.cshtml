
@if (Request.IsAuthenticated)
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("你好，" + Session["UserDisplayName"] + "!", "Index", "UserCenter")</li>
        <li><a href="/Account/Logout">注销</a></li>
    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("注册", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("登录", "Index", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
